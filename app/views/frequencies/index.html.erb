<h1>Frequencies</h1>

</br>
<% if user_signed_in? %>
<div class="container">
  <%= link_to 'New Frequency', new_frequency_path, class: "btn btn-success" %>
</div>
</br>
<%end %>

<div class="table-responsive">
<table class="table table-hover table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Frequency [GHz]</th>
      <th>Receiver</th>
      <% if user_signed_in? %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @frequencies.each do |frequency| %>
      <tr>
        <td><%= frequency.freq_ghz %></td>
        <td><%= frequency.receiver %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_frequency_path(frequency), class: "btn btn-outline-success btn-sm" %></td>
        <td><%= link_to 'Delete', frequency, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

</br>

